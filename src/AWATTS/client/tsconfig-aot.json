{
  "compilerOptions": {
    "target": "es5",
    "module": "es2015",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "skipDefaultLibCheck": true,
    "preserveConstEnums": true,
    "removeComments": false,
    "noImplicitAny": false,
    "strictNullChecks": false,
    "pretty": true,
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "noEmit": true,
    "types": [
      "core-js",
      "node"
    ]
  },
  "exclude": [
    "src/**/*.e2e.ts",
    "src/**/*.spec.ts",
    "src/main.browser*.ts",
    "buildOutput",
    "codegen",
    "coverage",
    "node_modules"
  ],
  "angularCompilerOptions": {
   "genDir": "codegen",
   "skipMetadataEmit" : true
  },
  "awesomeTypescriptLoaderOptions": {
    "forkChecker": true,
    "useCache": true,
    "useWebpackText": true
  },
  "compileOnSave": false,
  "buildOnSave": false
}
